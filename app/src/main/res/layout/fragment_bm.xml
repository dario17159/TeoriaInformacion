<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.BMPFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnExplorarBMP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_btn"
                android:text="Explorar"
                android:textColor="@color/md_white_1000"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="@string/respuesta"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnExplorarBMP" />

            <TextView
                android:id="@+id/tvResultadoBMP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/textView" />

            <TextView
                android:id="@+id/tvIDBMP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/id"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/tvTamanioArchivoBMP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/tama_o_del_archivo"
                app:layout_constraintStart_toStartOf="@+id/tvIDBMP"
                app:layout_constraintTop_toBottomOf="@+id/tvIDBMP" />

            <TextView
                android:id="@+id/tvReservado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Reservado"
                app:layout_constraintStart_toStartOf="@+id/tvTamanioArchivoBMP"
                app:layout_constraintTop_toBottomOf="@+id/tvTamanioArchivoBMP" />

            <TextView
                android:id="@+id/tvPosicionDatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Posicion de comienzo de datos"
                app:layout_constraintStart_toStartOf="@+id/tvReservado"
                app:layout_constraintTop_toBottomOf="@+id/tvReservado" />

            <TextView
                android:id="@+id/tvPropiedades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Propiedades de la Imagen"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/tvPosicionDatos" />

            <TextView
                android:id="@+id/tvTamanioSeccionBMP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Tamaño de la Sección: "
                app:layout_constraintStart_toStartOf="@+id/tvPropiedades"
                app:layout_constraintTop_toBottomOf="@+id/tvPropiedades" />

            <TextView
                android:id="@+id/tvAnchoPixeles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ancho en pixeles: "
                app:layout_constraintStart_toStartOf="@+id/tvTamanioSeccionBMP"
                app:layout_constraintTop_toBottomOf="@+id/tvTamanioSeccionBMP" />

            <TextView
                android:id="@+id/tvAltoPixeles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Alto en pixeles: "
                app:layout_constraintStart_toStartOf="@+id/tvAnchoPixeles"
                app:layout_constraintTop_toBottomOf="@+id/tvAnchoPixeles" />

            <TextView
                android:id="@+id/tvNumeroPlanos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Número de planos: "
                app:layout_constraintStart_toStartOf="@+id/tvAltoPixeles"
                app:layout_constraintTop_toBottomOf="@+id/tvAltoPixeles" />

            <TextView
                android:id="@+id/tvBitPixel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Bit por pixel: "
                app:layout_constraintStart_toStartOf="@+id/tvNumeroPlanos"
                app:layout_constraintTop_toBottomOf="@+id/tvNumeroPlanos" />

            <TextView
                android:id="@+id/tvCompresion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tipo de Compresion: "
                app:layout_constraintStart_toStartOf="@+id/tvBitPixel"
                app:layout_constraintTop_toBottomOf="@+id/tvBitPixel" />

            <TextView
                android:id="@+id/tvTamanioComprimidoBMP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tamaño Comprimido"
                app:layout_constraintStart_toStartOf="@+id/tvCompresion"
                app:layout_constraintTop_toBottomOf="@+id/tvCompresion" />

            <TextView
                android:id="@+id/tvResolucionHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Resolución Horizontal: "
                app:layout_constraintStart_toStartOf="@+id/tvTamanioComprimidoBMP"
                app:layout_constraintTop_toBottomOf="@+id/tvTamanioComprimidoBMP" />

            <TextView
                android:id="@+id/tvResolucionVertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Resolución Vertical: "
                app:layout_constraintStart_toStartOf="@+id/tvResolucionHorizontal"
                app:layout_constraintTop_toBottomOf="@+id/tvResolucionHorizontal" />

            <TextView
                android:id="@+id/tvNumeroColoresUsados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Número de Colores Usados: "
                app:layout_constraintStart_toStartOf="@+id/tvResolucionVertical"
                app:layout_constraintTop_toBottomOf="@+id/tvResolucionVertical" />

            <TextView
                android:id="@+id/tvNumeroColoresImportantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Número de Colores Importantes: "
                app:layout_constraintStart_toStartOf="@+id/tvNumeroColoresUsados"
                app:layout_constraintTop_toBottomOf="@+id/tvNumeroColoresUsados" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/por_favor_seleccione_un_archivo_para_obtener_una_respuesta"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.444"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>